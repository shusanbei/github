FROM python:3.11-slim

# 设置工作目录
WORKDIR /app

# 复制requirements文件
COPY requirements.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 安装git（DagsHub需要）
RUN apt-get update && apt-get install -y git && rm -rf /var/lib/apt/lists/*

# 复制项目代码
COPY . .

# 设置默认命令
CMD ["python", "-m", "app.app"]